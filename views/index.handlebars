<div class="container">
  <div class="row">
    <div class="col-md-12">
      {{!--Display burger image and title--}}
      <img class="burgerImage" src="/assets/img/burger.png" />
      <h1 id="title">Eat-Da-Burger!</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-2 col-md-4">
      {{!--Display burgers that have not been eaten--}}
      <ul>
        {{#each burgers}} {{#unless this.devoured}}
        <li>
          <form class="form-inline" action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            {{!--Display burger id and name--}}
            <div class="well well-sm col-md-8">
              {{this.id}}. {{this.burger_name}}
            </div>
            {{!--Display devour it button--}}
            <div class="col-md-4" id="devourItButton">
              <input type="hidden" name="devoured" value="true">
              <button type="submit">Devour it!</button>
            </div>
          </form>
        </li>
        {{/unless}} {{/each}}
      </ul>
    </div>
    <div class="col-md-4">
      {{!--Display burgers that have been eaten--}}
      <ul>
        {{#each burgers}} {{#if this.devoured}}
        <li>
          {{!--Display burger id and name--}}
          <div class="well well-sm col-md-12" id="devouredBurger">
            {{this.id}}. {{this.burger_name}}
          </div>
        </li>
        {{/if}} {{/each}}
      </ul>
    </div>
    <div class="col-md-2">
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      {{!--Form to add a new burger--}}
      <form class="create-update-form" action="burgers/create" method="POST" id="burgerNameForm">
        <div class="form-group">
          <input type="text" class="input-lg" id="bu" name="burger_name">
          <input type="hidden" name="devoured" value="0">
        </div>
        <button type="submit" class="btn btn-primary">Add Burger</button>
      </form>
      <h4 id="instructions">Enter a burger you want to eat. Click the "Add Burger" button.</h4>
    </div>
  </div>
</div>